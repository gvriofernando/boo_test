{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/server/app.js",
            "runtimeExecutable": "${workspaceFolder}/server/node_modules/nodemon/bin/nodemon.js",
            "runtimeArgs": ["--inspect=9229"],
            "port": 9229,
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}